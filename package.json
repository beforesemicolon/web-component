{
  "name": "@beforesemicolon/web-component",
  "version": "0.16.2",
  "description": "Web Component Client Framework",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:browser": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=chrome58 --outfile=dist/web-component.min.js",
    "build:browser-local": "esbuild src/client.ts --bundle --target=chrome58 --outfile=dist/web-component.min.js",
    "build": "tsc --noEmit && rm -rf dist && npm run build:browser && tsc",
    "build:local": "tsc --noEmit && rm -rf dist && npm run build:browser-local && tsc",
    "local": "nodemon --watch src -e ts --exec npm run build:local"
  },
  "keywords": [
    "web-component",
    "framework",
    "library",
    "javascript",
    "web",
    "html"
  ],
  "author": "Elson Correia",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/beforesemicolon/web-component",
    "type": "git"
  },
  "dependencies": {
    "jsdom": "^18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.13",
    "esbuild": "^0.14.2",
    "jest": "^27.4.4",
    "jest-environment-jsdom": "^27.4.4",
    "nodemon": "^2.0.13",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.3"
  }
}
