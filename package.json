{
  "name": "@beforesemicolon/web-component",
  "version": "0.0.2",
  "description": "Web Component Client Framework",
  "main": "dist/web-component.js",
  "scripts": {
    "test": "test",
    "build:min": "esbuild src/web-component.ts --bundle --minify --sourcemap --target=chrome58 --outfile=dist/web-component.min.js",
    "build:full": "esbuild src/web-component.ts --bundle --target=es6 --outfile=dist/web-component.js",
    "build": "tsc --noEmit && rm -rf dist && npm run build:min",
    "local": "nodemon --watch src -e ts --exec npm run build"
  },
  "keywords": [
    "web-component",
    "framework",
    "library",
    "javascript",
    "web",
    "html"
  ],
  "author": "Elson T. Correia",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/beforesemicolon/web-component",
    "type": "git"
  },
  "devDependencies": {
    "esbuild": "^0.13.8",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "typescript": "^4.4.4"
  }
}
